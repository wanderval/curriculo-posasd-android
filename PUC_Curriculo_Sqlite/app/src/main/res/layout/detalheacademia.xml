<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo:" />

    <Spinner
        android:id="@+id/detalhecurso_tipo_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/titulos_array"
        android:prompt="@string/titulo_prompt" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curso" />
    <EditText
        android:id="@+id/detalhecurso_curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instituição" />
    <EditText
        android:id="@+id/detalhecurso_instituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Conclusao" />
    <EditText
        android:id="@+id/detalhecurso_dataconclusao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btAtualizar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Atualizar" />


        <Button
            android:id="@+id/btEliminar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar" />

</LinearLayout>
        